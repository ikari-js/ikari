{
  "exclude": [
    "__test__/**/*.spec.ts",
    "__test__/**/*.test.ts",
    "node_modules",
    "dist"
  ],
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "outDir": "dist",
    "module": "ES2020",
    "rootDir": "./src/",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "declaration": true,
    "skipLibCheck": true,
  }
}
